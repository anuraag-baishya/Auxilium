<body>

	<!--
	============================================
	HEADER SECTION START
	============================================-->

	<header id="top-bar" class="navbar-fixed-top animated-header">
        <div class="container">
            <div class="navbar-header">
                <!-- responsive nav button -->
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                </button>
                <!-- /responsive nav button -->
                
                <!-- logo -->
                <div class="navbar-brand">
                    <a href="index" >
                        <img src="images/logo.png" alt="">
                    </a>
                </div>
                <!-- /logo -->
            </div>
            <!-- main menu -->
            <nav class="collapse navbar-collapse navbar-right" role="navigation">
                <div class="main-menu">
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <a href="index" >Home</a>
                        </li>
                        <li class="dropdown">
    						<a class="dropdown-toggle" data-toggle="dropdown" href="#">Services<span class="caret"></span></a>
    						<ul class="dropdown-menu">
    							<li><a href="bnb">b&b</a></li>
                                <li><a href="market">Market</a></li>
                                <!-- <li><a href="campus">Campus News</a></li> -->
                                <li><a href="places">Nearby Places</a></li>
                                <li><a href="promotions">Promotions</a></li>
    						</ul>
  						</li>
                        <li><a href="contact">Contact</a></li>
                        <li data-toggle="modal" data-target="#new-bnb-modal"><a href="#">New</a></li>
                    </ul>
                </div>
            </nav>
            <!-- /main nav -->
        </div>
    </header>
    <!--
	============================================
	HEADER SECTION END
	============================================-->

    <div class="modal fade" id="new-bnb-modal" tabindex="-1" role="dialog" aria-labelledby="login-label" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <!-- Begin # DIV Form -->
                <div id="div-forms">
                
                    <!-- Begin # Login Form -->
                    <form id="new-bnb-form" enctype="multipart/form-data">
                        <div class="modal-body">
                            <div id="div-bnb-msg">
                                <div id="icon-login-msg" class="fa fa-arrow-right"></div>
                                <span id="text-login-msg">Add New Item</span>
                            </div>
                            <input id="new-bnb-title" class="form-control" type="text" placeholder="Title" required>
                            <textarea class="form-control" rows="5" id="new-bnb-desc" placeholder="Description"></textarea>
                            <input id="new-bnb-owner" class="form-control" type="text" placeholder="Owner" required>
                            <input id="new-bnb-phone" class="form-control" type="number" placeholder="Phone" required>
                            <input id="new-bnb-email" class="form-control" type="email" placeholder="Email" required>
                            <label class="btn btn-default btn-file">
                                    Add Photos <input type="file" name="image-upload" accept="image/*">
                            </label>
                        </div>
                        <div class="modal-footer">
                            <div>
                                <button type="submit" id="add_btn"class="add-btn btn btn-primary btn-lg btn-block">Add</button>
                            </div>
                        </div>
                    </form>
                </div>
        </div>
    </div>
</div>


    <!--
